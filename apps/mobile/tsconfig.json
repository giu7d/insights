{
  "extends": ["@insights/tooling-typescript/base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-native",
    "tsBuildInfoFile": "${configDir}/.cache/tsbuildinfo.json",
    "types": ["nativewind/types", "jest"],
    "checkJs": false
  },
  "include": [
    "src",
    "config",
    "*.ts",
    "*.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "eslint.config.mjs",
    "nativewind-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
