{
  "name": "splitter-mobile",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start --dev-client",
    "dev": "expo start",
    "build": "expo export --output-dir ./build --platform all",
    "run:android": "expo run:android",
    "run:ios": "expo run:ios",
    "run:web": "expo start --web",
    "lint": "eslint . --ext [.ts,.tsx]",
    "lint:fix": "eslint . --ext [.ts,.tsx] --fix",
    "test": "jest --silent --ci --coverage --testLocationInResults --json --outputFile=\"report.json\"",
    "test:dev": "jest --watch --coverage=false --changedSince=origin/main",
    "test:debug": "jest -o --watch --coverage=false",
    "test:update-snapshots": "jest -u --coverage=false",
    "e2e:ios:build": "detox build -c ios.release",
    "e2e:ios:test": "detox test -c ios.release --forceExit --cleanup --headless",
    "e2e:android:build": "detox build -c android.release",
    "e2e:android:test": "detox test -c android.release --forceExit --cleanup --headless"
  },
  "dependencies": {
    "@expo/vector-icons": "^13.0.0",
    "@shopify/flash-list": "1.4.3",
    "@tanstack/react-query": "^4.18.0",
    "@trpc/client": "^10.4.2",
    "@trpc/react-query": "^10.4.2",
    "@trpc/server": "^10.4.2",
    "expo": "~49.0.13",
    "expo-blur": "~12.4.1",
    "expo-build-properties": "~0.8.3",
    "expo-constants": "~14.4.2",
    "expo-dev-client": "~2.4.11",
    "expo-haptics": "~12.4.0",
    "expo-linear-gradient": "~12.3.0",
    "expo-linking": "~5.0.2",
    "expo-modules-core": "^1.5.11",
    "expo-router": "^2.0.0",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "expo-updates": "~0.18.16",
    "jotai": "^2.1.0",
    "nativewind": "^2.0.11",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.72.5",
    "react-native-gesture-handler": "^2.12.1",
    "react-native-hold-menu": "^0.1.6",
    "react-native-mmkv": "^2.10.0",
    "react-native-reanimated": "^3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.1",
    "react-native-web": "~0.19.6",
    "react-native-widget-extension": "^0.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@config-plugins/detox": "^5.0.1",
    "@expo/webpack-config": "^19.0.0",
    "@testing-library/react-native": "^12.0.0-rc.0",
    "@types/jest": "^29.4.0",
    "@types/react": "~18.2.14",
    "babel-plugin-module-resolver": "^4.1.0",
    "detox": "^20.7.2",
    "jest": "^29.5.0",
    "jest-expo": "^48.0.2",
    "jest-fetch-mock": "^3.0.3",
    "msw": "^1.0.1",
    "msw-trpc": "^1.2.0",
    "postcss-loader": "4.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "splitter-api": "workspace:*",
    "tailwindcss": "^3.2.4",
    "typescript": "^5.1.3"
  },
  "private": true
}
