{
  "name": "@splitter/mobile",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "expo start",
    "dev:android": "expo start --android",
    "dev:ios": "expo start --ios",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "lint": "run-s lint:*",
    "lint:ts": "tsc",
    "lint:eslint": "eslint",
    "lint:prettier": "prettier --check . --ignore-path ../../.gitignore",
    "clean": "git clean -xdf node_modules .turbo .expo ios android coverage report.json",
    "test": "jest --silent --ci --coverage --testLocationInResults --json --outputFile=\"report.json\"",
    "test:dev": "jest --watch --coverage=false --changedSince=origin/main",
    "test:debug": "jest -o --watch --coverage=false",
    "test:update-snapshots": "jest -u --coverage=false",
    "e2e:ios:build": "detox build -c ios.release",
    "e2e:ios:test": "detox test -c ios.release --forceExit --cleanup --headless",
    "e2e:android:build": "detox build -c android.release",
    "e2e:android:test": "detox test -c android.release --forceExit --cleanup --headless"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.1",
    "@shopify/flash-list": "1.6.3",
    "@tanstack/react-query": "^4.18.0",
    "@trpc/client": "^10.45.2",
    "@trpc/react-query": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "classnames": "^2.3.2",
    "expo": "~50.0.17",
    "expo-blur": "~12.9.2",
    "expo-build-properties": "~0.11.1",
    "expo-constants": "~15.4.6",
    "expo-dev-client": "~3.3.11",
    "expo-haptics": "~12.8.1",
    "expo-linear-gradient": "~12.7.2",
    "expo-linking": "~6.2.2",
    "expo-router": "^3.4.10",
    "expo-splash-screen": "~0.26.5",
    "expo-status-bar": "~1.11.1",
    "expo-updates": "~0.24.12",
    "jotai": "^2.1.0",
    "nativewind": "^2.0.11",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.6",
    "react-native-gesture-handler": "^2.14.1",
    "react-native-hold-menu": "^0.1.6",
    "react-native-mmkv": "^2.10.0",
    "react-native-reanimated": "^3.6.3",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-web": "~0.19.6"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@config-plugins/detox": "^5.0.1",
    "@expo/webpack-config": "^19.0.1",
    "@splitter/api": "workspace:*",
    "@splitter/package-validators": "workspace:*",
    "@splitter/tooling-eslint": "workspace:*",
    "@splitter/tooling-prettier": "workspace:*",
    "@splitter/tooling-typescript": "workspace:*",
    "@testing-library/react-native": "^12.0.0-rc.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.79",
    "babel-plugin-module-resolver": "^4.1.0",
    "detox": "^20.7.2",
    "jest": "^29.7.0",
    "jest-expo": "^50.0.4",
    "jest-fetch-mock": "^3.0.3",
    "msw": "^1.0.1",
    "msw-trpc": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "4.2.0",
    "prettier": "^3.2.5",
    "resize-observer-polyfill": "^1.5.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^5.4.5"
  },
  "prettier": "@splitter/tooling-prettier"
}
