{
  "name": "splitter-mobile",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start --dev-client",
    "dev": "expo start --lan",
    "build": "expo export --output-dir ./build --platform all",
    "run:android": "expo run:android",
    "run:ios": "expo run:ios",
    "run:web": "expo start --web",
    "lint": "eslint . --ext [.ts,.tsx]",
    "lint:fix": "eslint . --ext [.ts,.tsx] --fix",
    "test": "jest --silent --ci --coverage --testLocationInResults --json --outputFile=\"report.json\"",
    "test:dev": "jest --watch --coverage=false --changedSince=origin/main",
    "test:debug": "jest -o --watch --coverage=false",
    "test:update-snapshots": "jest -u --coverage=false",
    "e2e:ios:build": "detox build -c ios.release",
    "e2e:ios:test": "detox test -c ios.release --forceExit --cleanup --headless",
    "e2e:android:build": "detox build -c android.release",
    "e2e:android:test": "detox test -c android.release --forceExit --cleanup --headless"
  },
  "dependencies": {
    "@expo/vector-icons": "^13.0.0",
    "@tanstack/react-query": "^4.18.0",
    "@trpc/client": "^10.4.2",
    "@trpc/react-query": "^10.4.2",
    "@trpc/server": "^10.4.2",
    "expo": "~48.0.11",
    "expo-build-properties": "~0.6.0",
    "expo-constants": "~14.2.1",
    "expo-dev-client": "~2.2.1",
    "expo-linear-gradient": "~12.1.2",
    "expo-splash-screen": "~0.18.2",
    "expo-status-bar": "~1.4.4",
    "expo-updates": "~0.16.4",
    "nativewind": "^2.0.11",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.71.7",
    "react-native-gesture-handler": "~2.9.0",
    "react-native-reanimated": "~2.14.4",
    "react-native-web": "~0.18.10"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@config-plugins/detox": "^5.0.1",
    "@expo/webpack-config": "^18.0.1",
    "@testing-library/react-native": "^12.0.0-rc.0",
    "@types/detox": "^18.1.0",
    "@types/jest": "^29.4.0",
    "@types/react": "~18.0.37",
    "@types/react-native": "~0.70.6",
    "babel-plugin-module-resolver": "^4.1.0",
    "detox": "^20.7.2",
    "jest": "^29.4.3",
    "jest-expo": "^48.0.2",
    "jest-fetch-mock": "^3.0.3",
    "msw": "^1.0.1",
    "msw-trpc": "^1.2.0",
    "postcss-loader": "4.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "splitter-api": "workspace:*",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.5"
  },
  "private": true
}
