{
  "name": "@splitter/api",
  "version": "1.0.0",
  "main": "build/index.mjs",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node build/index.mjs",
    "dev": "pnpm with-env run-p dev:*",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:esbuild": "pnpm run build --watch",
    "dev:node": "wait-on build/index.mjs && node --watch build/index.mjs",
    "build": "pnpm with-env node esbuild.config.mjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "run-s lint:*",
    "lint:ts": "tsc",
    "lint:eslint": "eslint",
    "lint:prettier": "prettier --check . --ignore-path ../../.gitignore",
    "clean": "git clean -xdf node_modules .turbo build",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/formbody": "^7.4.0",
    "@splitter/package-auth": "workspace:*",
    "@splitter/package-db": "workspace:*",
    "@splitter/package-validators": "workspace:*",
    "@t3-oss/env-core": "^0.10.1",
    "@trpc/server": "^10.45.2",
    "colors": "^1.4.0",
    "fastify": "^4.26.2",
    "superjson": "^2.2.1",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@splitter/package-validators": "workspace:*",
    "@splitter/tooling-eslint": "workspace:*",
    "@splitter/tooling-prettier": "workspace:*",
    "@splitter/tooling-typescript": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.31",
    "@vercel/node": "^2.15.10",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "wait-on": "^7.2.0"
  },
  "prettier": "@splitter/tooling-prettier"
}
