{
  "name": "@splitter/api",
  "version": "1.0.0",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "start": "node build/index.js",
    "dev": "run-p dev:*",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --watch build/index.js",
    "dev:esbuild": "pnpm run build --watch",
    "build": "node esbuild.config.mjs",
    "clean": "rm -rf .turbo node_modules",
    "lint": "run-s lint:*",
    "lint:ts": "tsc",
    "lint:eslint": "eslint . --ext [.ts]",
    "lint:eslint:fix": "eslint . --ext [.ts] --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@trpc/server": "^10.45.2",
    "fastify": "^4.26.2",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@splitter/tooling-typescript": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.31",
    "@vercel/node": "^2.15.10",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "private": true
}
