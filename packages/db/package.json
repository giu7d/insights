{
  "name": "@splitter/package-db",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "clean": "git clean -xdf node_modules .turbo",
    "build": "tsc",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint",
    "lint:ts": "tsc --noEmit --emitDeclarationOnly false",
    "lint:prettier": "prettier --check . --ignore-path ../../.gitignore",
    "db:push": "pnpm with-env drizzle-kit push:pg --config src/config.ts",
    "db:studio": "pnpm with-env drizzle-kit studio --config src/config.ts",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.10.1",
    "drizzle-orm": "^0.30.10",
    "pg": "^8.11.5",
    "postgres": "^3.4.4",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@splitter/tooling-eslint": "workspace:*",
    "@splitter/tooling-prettier": "workspace:*",
    "@splitter/tooling-typescript": "workspace:*",
    "@types/pg": "^8.11.6",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.20.18",
    "eslint": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "prettier": "@splitter/tooling-prettier"
}
