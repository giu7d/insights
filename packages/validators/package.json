{
  "name": "@splitter/package-validators",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "default": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "git clean -xdf node_modules .turbo",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint",
    "lint:ts": "tsc --noEmit --emitDeclarationOnly false",
    "lint:prettier": "prettier --check . --ignore-path ../../.gitignore"
  },
  "dependencies": {
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@splitter/tooling-eslint": "workspace:*",
    "@splitter/tooling-prettier": "workspace:*",
    "@splitter/tooling-typescript": "workspace:*",
    "eslint": "^9.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "prettier": "@splitter/tooling-prettier"
}
