    "emitDecoratorMetadata": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
