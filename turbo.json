{
  "$schema": "https://turbo.build/schema.json",
  "experimentalUI": true,
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "lint": {
      "outputs": ["node_modules/.cache/.lint-stage-cache"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["**/*.{ts,tsx,js,jsx}"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        ".output/**",
        ".vercel/output/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
